<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ddd"
    android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="@integer/int_row"
    android:scaleX="1.4"
    android:scaleY="0.9"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_columnSpan="4"
        android:layout_gravity="center"
        android:background="#eee"
        android:gravity="center"
        android:hint="@string/tv_input"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <Space />

    <Button
        android:id="@+id/button_mult"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="@string/bt_mult" />

    <Button
        android:id="@+id/button_8"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:text="@string/bt_eight" />

    <Button
        android:id="@+id/button_9"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:text="@string/bt_nine" />

    <Button
        android:id="@+id/button_4"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="@string/bt_four" />

    <Button
        android:id="@+id/button_5"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="@string/bt_five" />

    <Button
        android:id="@+id/button_6"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="@string/bt_six" />

    <Button
        android:id="@+id/button_1"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="@string/bt_one" />

    <Button
        android:id="@+id/button_2"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="@string/bt_two" />

    <Button
        android:id="@+id/button_3"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="@string/bt_three" />

    <Button
        android:id="@+id/button_0"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="@string/bt_zero" />

    <Button
        android:id="@+id/button_dot"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="@string/bt_dot" />

    <Button
        android:id="@+id/button_div"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="@string/bt_div" />

    <Button
        android:id="@+id/button_plus_minus"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:text="@string/bt_plus_minus" />

    <Button
        android:id="@+id/button_bksp"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:text="@string/bt_bksp" />

    <Button
        android:id="@+id/button_enter"
        style="@style/btFuncStyle"
        android:layout_width="133dp"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:text="@string/bt_enter" />

    <Button
        android:id="@+id/button_plus"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="@string/bt_plus" />

    <Button
        android:id="@+id/button_clx"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:text="@string/bt_clx" />

    <Button
        android:id="@+id/button_minus"
        style="@style/btFuncStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:text="@string/bt_minus" />

    <Button
        android:id="@+id/button_7"
        style="@style/btNumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:text="@string/bt_seven" />

</GridLayout>