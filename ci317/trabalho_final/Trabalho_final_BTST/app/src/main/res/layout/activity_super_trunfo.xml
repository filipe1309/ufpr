<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty_field"
        android:id="@+id/card_image"
        android:src="@drawable/carregando"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_alignBottom="@+id/card_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:id="@+id/rg_card"
            android:layout_margin="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:id="@+id/rb_duration"
                android:checked="false" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/box_office"
                android:id="@+id/rb_boxOffice"
                android:checked="false" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orcars"
                android:id="@+id/rb_orcar"
                android:checked="false" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imdb_score"
                android:id="@+id/rb_imdb"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/empty_field"
            android:id="@+id/tv_duration"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rg_card"
            android:layout_toEndOf="@+id/rg_card"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/empty_field"
            android:id="@+id/tv_boxOffice"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rg_card"
            android:layout_toEndOf="@+id/rg_card"
            android:layout_marginTop="55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/empty_field"
            android:id="@+id/tv_oscar"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rg_card"
            android:layout_toEndOf="@+id/rg_card"
            android:layout_marginTop="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/empty_field"
            android:id="@+id/tv_imdb"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rg_card"
            android:layout_toEndOf="@+id/rg_card"
            android:layout_marginTop="125dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_image"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/round"
            android:id="@+id/tv_round"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/me"
            android:id="@+id/tv_my_score"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_round"
            android:layout_toEndOf="@+id/tv_round"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/opponent"
            android:id="@+id/tv_opponent_score"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_my_score"
            android:layout_toEndOf="@+id/tv_my_score"
            android:layout_margin="10dp" />
    </RelativeLayout>

</RelativeLayout>